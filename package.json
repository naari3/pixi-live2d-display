{
  "name": "@naari3/pixi-live2d-display",
  "version": "1.1.1",
  "description": "Live2D plugin for PixiJS",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./cubism5": {
      "types": "./types/index.d.ts",
      "import": "./dist/cubism5.es.js",
      "require": "./dist/cubism5.js"
    },
    "./extra": {
      "types": "./types/extra.d.ts",
      "import": "./dist/extra.es.js",
      "require": "./dist/extra.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naari3/pixi-live2d-display.git"
  },
  "author": "naari3 <naari.named@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "node scripts/setup.js",
    "playground": "vite",
    "test": "vitest",
    "test:u": "vitest --update",
    "build": "rimraf dist && node scripts/build.js",
    "pretype": "node scripts/patch-dts-generator.js",
    "type": "rimraf types && dts-bundle-generator src/index.ts --no-check --project=tsconfig.build.json -o=types/index.d.ts && dts-bundle-generator src/extra.ts --no-check --project=tsconfig.build.json -o=types/extra.d.ts ",
    "posttype": "node scripts/patch-types.js",
    "doc": "node scripts/gen-docs.js",
    "serve-docs": "mkdocs serve -f docs/mkdocs.yml",
    "deploy": "gh-pages -d site",
    "prepublishOnly": "npm run type && npm run build",
    "lint": "eslint . --config .eslintrc.cjs --rule \"prettier/prettier: error\"",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "files": [
    "dist",
    "types"
  ],
  "types": "types/index.d.ts",
  "peerDependencies": {
    "pixi.js": "^8.0.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.3.0",
    "@types/offscreencanvas": "^2019.7.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/browser": "^3.2.4",
    "birpc": "^2.5.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gh-pages": "^6.3.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "jest-image-snapshot": "^6.5.1",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "pixi.js": "^8.12.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4",
    "webdriverio": "^9.19.2",
    "ws": "^8.18.3"
  }
}
